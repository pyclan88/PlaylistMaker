<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customColorPrimary"
    android:orientation="vertical"
    android:paddingStart="@dimen/main_menu_pad_left"
    android:paddingTop="@dimen/main_menu_pad_top"
    android:paddingEnd="@dimen/main_menu_pad_right"
    android:paddingBottom="@dimen/main_menu_pad_bottom">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="start"
            android:text="@string/main_menu"
            android:textColor="@color/customColorOnPrimary"
            android:textFontWeight="500"
            android:textSize="@dimen/text22" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"

        android:orientation="vertical">

        <Button
            android:id="@+id/search_button"
            style="@style/MainButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/search"
            app:icon="@drawable/ic_search" />

        <Button
            android:id="@+id/media_library_button"
            style="@style/MainButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/music_library"
            app:icon="@drawable/ic_media_library" />

        <Button
            android:id="@+id/settings_button"
            style="@style/MainButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/settings"
            app:icon="@drawable/ic_settings" />

    </LinearLayout>
</LinearLayout>