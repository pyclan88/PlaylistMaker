<?xml version="1.0" encoding="utf-8"?><!-- mainLayout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/track_view"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cover"
        android:layout_width="@dimen/cover_size45"
        android:layout_height="@dimen/cover_size45"
        android:layout_marginStart="@dimen/offset13"
        android:layout_marginTop="@dimen/offset8"
        android:layout_marginEnd="@dimen/offset8"
        android:layout_marginBottom="@dimen/offset8"
        android:src="@drawable/placeholder" />
    <!-- middleLayoutStart -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:lines="1"
            android:textColor="@color/customColorOnBackground"
            android:textSize="@dimen/text16"
            tools:text="Yesterday (Remastered 2009)" />
        <!-- lowerMiddleLayoutStart -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/ys_display_regular"
                android:lines="1"
                android:textColor="@color/customIconTint"
                android:textSize="@dimen/text11"
                tools:text="The Beatles" />

            <ImageView
                android:layout_width="@dimen/ellipse_offset13"
                android:layout_height="@dimen/ellipse_offset13"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_ellipse_1" />

            <TextView
                android:id="@+id/track_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="@color/customIconTint"
                android:textSize="@dimen/text11"
                tools:text="2:55" />
            <!-- lowerMiddleLayoutEnd -->
        </LinearLayout>
        <!-- middleLayoutEnd -->
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/arrow_forward_offset24"
        android:layout_height="@dimen/arrow_forward_offset24"
        android:layout_gravity="end|center"
        android:layout_marginStart="@dimen/offset8"
        android:layout_marginEnd="@dimen/offset12"
        android:scaleType="center"
        android:src="@drawable/ic_arrow_forward"
        app:tint="@color/customIconTint" />
</LinearLayout>