<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/customColorOnSurface</item>
        <item name="android:textSize">@dimen/text22</item>
        <item name="cornerRadius">@dimen/corner16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_menu_icon_padding</item>
        <item name="iconTint">@color/customColorOnSurface</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsButtonStyle">
        <item name="android:backgroundTint">@color/customBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/offset16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/customColorOnBackground</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="cornerRadius">0dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="Header">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/customColorOnBackground</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text22</item>
    </style>

    <style name="ViewTextUpper">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/customColorOnBackground</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text16</item>
    </style>

    <style name="ViewTextLower">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/customColorOnBackground</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text11</item>
    </style>

    <style name="EditTextCursorStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="nothing_found_text">
        <item name="android:textSize">@dimen/text19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/customColorOnBackground</item>
    </style>

    <style name="BottomSheetHeader">
        <item name="android:textSize">@dimen/text19</item>
        <item name="fontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/customColorOnBackground</item>
    </style>

    <style name="PlayerLabel">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text13</item>
        <item name="android:textColor">@color/yp_text_gray</item>
    </style>

    <style name="PlayerValue">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text13</item>
        <item name="android:textColor">@color/customColorOnBackground</item>
    </style>

    <style name="ActionButton">
        <item name="backgroundTint">@color/customColorOnBackground</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textColor">@color/customBackground</item>
        <item name="android:textSize">@dimen/text14</item>
        <item name="cornerRadius">@dimen/button_corner_54</item>
    </style>

    <style name="bottomNavColor" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
    </style>

    <style name="bottomNavText" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text12</item>
    </style>

    <style name="CustomOutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!--        box in focus-->
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <!--        hint in focus-->
        <item name="hintTextColor">@color/yp_blue</item>
        <!--        hint out of focus-->
        <item name="android:textColorHint">@color/customColorOnBackground</item>
        <!--        text input-->
        <item name="android:textColor">@color/customColorOnBackground</item>
    </style>

    <style name="CustomHintTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="font">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
        <!-- button text -->
        <item name="colorPrimary">@color/yp_white</item>
        <!-- title text -->
        <item name="colorOnSurface">@color/customColorOnBackground</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/yp_blue</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/yp_blue</item>
    </style>

</resources>